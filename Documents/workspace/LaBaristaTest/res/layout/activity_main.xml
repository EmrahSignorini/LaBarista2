<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/back1" >

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="22dp"
        android:background="@null"
        android:contentDescription="Table 1"
        android:src="@drawable/a_button2"
        android:onClick="occupyTable"
        android:text="Table 1" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button1"
        android:layout_marginRight="25dp"
        android:layout_marginTop="66dp"
        android:background="@null"
        android:contentDescription="Table 6"
        android:src="@drawable/a_button2"
        android:onClick="occupyTable"
        android:text="Table 6" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button6"
        android:layout_alignLeft="@+id/button6"
        android:background="@null"
        android:contentDescription="Table 3"
        android:src="@drawable/a_button2"
        android:onClick="occupyTable"
        android:text="Table 3" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button6"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:contentDescription="Table 2"
        android:src="@drawable/a_button2"
        android:onClick="occupyTable"
        android:text="Table 2" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button6"
        android:layout_alignBottom="@+id/button6"
        android:layout_alignLeft="@+id/button2"
        android:background="@null"
        android:contentDescription="Table 5"
        android:src="@drawable/a_button2"
        android:onClick="occupyTable"
        android:text="Table 5" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button5"
        android:layout_alignBottom="@+id/button5"
        android:layout_alignLeft="@+id/button1"
        android:background="@null"
        android:contentDescription="Table 4"
        android:src="@drawable/a_button2"
        android:onClick="occupyTable"
        android:text="Table 4" />

    <ImageButton
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/button6"
        android:layout_marginBottom="14dp"
        android:background="@null"
        android:onClick="refresh"
        android:src="@drawable/refresh"
        android:text="Refresh" />

</RelativeLayout>
